{{! include layout폴더에 header머스테치 }}
{{>layout/header}}
    <h1>BS가나다라</h1>
    <div class="col_md-12">
    <!-- 로그인기능 영역 -->
        <div class="row">
            <div class="col-md-6">
                <a href="/posts/save" role="button" class="btn btn-primary">글등록</a>
            {{#userName}}
            {{!userName이 있으면}}
               Logged in as : <span id ="user">{{userName}}</span>
                <a href="/logout" class="btn btn-info active" role="button">Logout</a>
            {{!userName이 까지실행}}
            {{/userName}}
            {{^userName}}
            {{!userName이 없으면}}
                <a href="/oauth2/authorization/google" class="btn btn-success active" role="button">Google Login</a>
            {{!userName이 까지실행}}
            {{/userName}}
            </div>
            <br>
            <table class="table table-horizontal table-borderd">
                <thead class="thead-strong">
                <tr>
                    <th>
                        게시글번호
                    </th>
                    <th>
                        제목
                    </th>
                    <th>
                        작성자
                    </th>
                    <th>
                        최종수정일
                    </th>
                </tr>
                </thead>
                <tbody id="tbody">
                    {{#posts}}
                        {{! posts라는 리스트 순회}}
                    <tr>
                        <td>{{id}}</td>
                        <td><a href="/posts/update/{{id}}">{{title}}</a></td>
                        <td>{{author}}</td>
                        <td>{{modifiedDate}}</td>
                    </tr>
                        {{! 순회종료 }}
                    {{/posts}}
                </tbody>
            </table>
        </div>
    </div>
{{! include layout폴더에 footer머스테치 }}
{{>layout/footer}}
